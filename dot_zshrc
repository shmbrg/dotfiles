# export default editor
export EDITOR=nano

# Path to your oh-my-zsh installation.
export ZSH="/Users/humbeseb/.oh-my-zsh"

# add poetry to path
export PATH="$HOME/.poetry/bin:$PATH"

# all themes can be found here: https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="agnoster"

# add plugins
plugins=(git)

# preset by oh-my-zsh
ZSH_DISABLE_COMPFIX="true"
source $ZSH/oh-my-zsh.sh

# this needs to be set in order for pyenv to use shims
eval "$(pyenv init -)"

# set aliases
alias rep="cd ~/Repositories/ && ls"
alias ec="$EDITOR $HOME/.zshrc"
alias sc="source $HOME/.zshrc"
alias ..="cd .."
alias tf="terraform"



# set alias with parameter
cdls() {
  cd $1 && ls
}

gitall() {
  git add .
  if [ "$1" != "" ]
  then 
    git commit -m $1
    git push
  else
    echo "add git commit message"
  fi
}

